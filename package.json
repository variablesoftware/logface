{
  "name": "@variablesoftware/logface",
  "version": "0.1.8",
  "description": "🎛️🪵😎 A fun, lightweight, structured console-style logger with tag-based filtering for TypeScript projects.",
  "keywords": [
    "logger",
    "console",
    "structured",
    "typescript",
    "debug",
    "logface"
  ],
  "author": {
    "name": "Rob Friedman",
    "email": "bunkcode@variablesoftware.com",
    "url": "https://github.com/variablesoftware"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "type": "module",
  "lint-staged": {
    "**/*.{ts,js,mjs,cts}": "eslint --fix"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist && git tag -d $(git tag)",
    "dev": "vitest watch",
    "prepare": "husky install",
    "format": "yarn format:all",
    "format:all": "prettier --write --log-level error .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier:check": "prettier --check .",
    "publish:npm": "yarn npm publish --access public",
    "test": "vitest run",
    "test:build": "yarn clean && yarn build && yarn test",
    "upgrade:latest": "yarn set version stable && yarn upgrade-interactive",
    "version:patch": "yarn version patch",
    "version:minor": "yarn version minor",
    "version:major": "yarn version major",
    "release": "yarn clean && yarn build && git push && git push --tags && yarn npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/variablesoftware/logface"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.14",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "packageManager": "yarn@4.9.1+sha512.f95ce356460e05be48d66401c1ae64ef84d163dd689964962c6888a9810865e39097a5e9de748876c2e0bf89b232d583c33982773e9903ae7a76257270986538"
}
